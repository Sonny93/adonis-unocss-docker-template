{
	"name": "adonis-unocss-docker-template",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"license": "UNLICENSED",
	"scripts": {
		"start": "node bin/server.js",
		"build": "node ace build",
		"dev": "node ace serve --hmr",
		"test": "node ace test",
		"lint": "eslint .",
		"format": "prettier --write .",
		"check": "pnpm run lint && pnpm run typecheck",
		"postinstall": "pnpm run format",
		"postuninstall": "pnpm run format"
	},
	"imports": {
		"#controllers/*": "./app/controllers/*.js",
		"#exceptions/*": "./app/exceptions/*.js",
		"#models/*": "./app/models/*.js",
		"#mails/*": "./app/mails/*.js",
		"#services/*": "./app/services/*.js",
		"#listeners/*": "./app/listeners/*.js",
		"#events/*": "./app/events/*.js",
		"#middleware/*": "./app/middleware/*.js",
		"#validators/*": "./app/validators/*.js",
		"#providers/*": "./providers/*.js",
		"#policies/*": "./app/policies/*.js",
		"#abilities/*": "./app/abilities/*.js",
		"#database/*": "./database/*.js",
		"#tests/*": "./tests/*.js",
		"#start/*": "./start/*.js",
		"#config/*": "./config/*.js",
		"#generated/*": "./.adonisjs/server/*.js",
		"#transformers/*": "./app/transformers/*.js"
	},
	"devDependencies": {
		"@adonisjs/assembler": "^8.0.0",
		"@adonisjs/eslint-config": "^3.0.0",
		"@adonisjs/tsconfig": "^2.0.0",
		"@japa/assert": "^4.2.0",
		"@japa/plugin-adonisjs": "^5.1.0",
		"@japa/runner": "^5.3.0",
		"@poppinss/ts-exec": "^1.4.4",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.14",
		"@types/react-dom": "^19.2.3",
		"@unocss/preset-web-fonts": "^66.6.0",
		"@vitejs/plugin-react": "^5.1.4",
		"eslint": "^10.0.1",
		"hot-hook": "^0.4.0",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.8.1",
		"release-it": "^19.2.4",
		"typescript": "~5.9.3",
		"unocss": "^66.6.0",
		"vite": "^7.3.1",
		"youch": "^4.1.0"
	},
	"dependencies": {
		"@adonisjs/auth": "^10.0.0",
		"@adonisjs/core": "^7.0.0",
		"@adonisjs/cors": "^3.0.0",
		"@adonisjs/inertia": "^4.0.0",
		"@adonisjs/lucid": "^22.0.0",
		"@adonisjs/session": "^8.0.0",
		"@adonisjs/shield": "^9.0.0",
		"@adonisjs/static": "^2.0.0",
		"@adonisjs/vite": "^5.1.0",
		"@inertiajs/react": "^2.3.15",
		"@minimalstuff/ui": "^1.1.6",
		"@vinejs/vine": "^4.3.0",
		"edge.js": "^6.5.0",
		"luxon": "^3.7.2",
		"pg": "^8.18.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"reflect-metadata": "^0.2.2"
	},
	"hotHook": {
		"boundaries": [
			"./app/controllers/**/*.ts",
			"./app/middleware/*.ts"
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"quoteProps": "as-needed",
		"bracketSpacing": true,
		"arrowParens": "always",
		"printWidth": 80
	},
	"volta": {
		"node": "24.13.1"
	}
}
