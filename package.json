{
	"name": "adonis-unocss-docker-template",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"license": "UNLICENSED",
	"scripts": {
		"start": "node bin/server.js",
		"build": "node ace build",
		"dev": "node ace serve --hmr",
		"test": "node ace test",
		"lint": "eslint .",
		"format": "prettier --write .",
		"check": "pnpm run lint && pnpm run typecheck",
		"postinstall": "pnpm run format",
		"postuninstall": "pnpm run format"
	},
	"imports": {
		"#controllers/*": "./app/controllers/*.js",
		"#exceptions/*": "./app/exceptions/*.js",
		"#models/*": "./app/models/*.js",
		"#mails/*": "./app/mails/*.js",
		"#services/*": "./app/services/*.js",
		"#listeners/*": "./app/listeners/*.js",
		"#events/*": "./app/events/*.js",
		"#middleware/*": "./app/middleware/*.js",
		"#validators/*": "./app/validators/*.js",
		"#providers/*": "./providers/*.js",
		"#policies/*": "./app/policies/*.js",
		"#abilities/*": "./app/abilities/*.js",
		"#database/*": "./database/*.js",
		"#tests/*": "./tests/*.js",
		"#start/*": "./start/*.js",
		"#config/*": "./config/*.js"
	},
	"devDependencies": {
		"@adonisjs/assembler": "^7.8.2",
		"@adonisjs/eslint-config": "^2.1.2",
		"@adonisjs/tsconfig": "^1.4.1",
		"@japa/assert": "^4.2.0",
		"@japa/plugin-adonisjs": "^4.0.0",
		"@japa/runner": "^5.0.0",
		"@swc/core": "1.15.8",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.10.0",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@unocss/preset-web-fonts": "^66.5.12",
		"@vitejs/plugin-react": "^5.1.2",
		"eslint": "^9.39.2",
		"hot-hook": "^0.4.0",
		"pino-pretty": "^13.1.3",
		"prettier": "^3.7.4",
		"release-it": "^19.2.3",
		"ts-node-maintained": "^10.9.6",
		"typescript": "~5.9.3",
		"unocss": "^66.5.12",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@adonisjs/auth": "^9.5.1",
		"@adonisjs/core": "^6.19.2",
		"@adonisjs/cors": "^2.2.1",
		"@adonisjs/inertia": "^3.1.1",
		"@adonisjs/lucid": "^21.8.1",
		"@adonisjs/session": "^7.7.1",
		"@adonisjs/shield": "^8.2.0",
		"@adonisjs/static": "^1.1.1",
		"@adonisjs/vite": "^4.0.0",
		"@inertiajs/react": "^2.3.7",
		"@vinejs/vine": "^4.2.0",
		"edge.js": "^6.4.0",
		"luxon": "^3.7.2",
		"pg": "^8.16.3",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"reflect-metadata": "^0.2.2"
	},
	"hotHook": {
		"boundaries": [
			"./app/controllers/**/*.ts",
			"./app/middleware/*.ts"
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"semi": true,
		"singleQuote": true,
		"useTabs": true,
		"quoteProps": "as-needed",
		"bracketSpacing": true,
		"arrowParens": "always",
		"printWidth": 80
	},
	"volta": {
		"node": "24.12.0"
	}
}
